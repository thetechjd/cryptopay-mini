{
  "name": "@cryptocadet/crypto-pay-mini",
  "private": false,
  "version": "1.0.0",
  "author": "The TechJD",
  "license": "MIT",
  "description": "Minimal payment router for accepting payments on EVM and Solana.",
  "files": [
    "dist"
  ],
  "main": "./dist/react-crypto-pay.umd.js",
  "module": "./dist/react-crypto-pay.es.js",
  "exports": {
    ".": {
      "import": "./dist/react-crypto-pay.es.js",
      "require": "./dist/react-crypto-pay.umd.js"
    },
    "./dist/style.css": {
      "import": "./dist/style.css",
      "require": "./dist/styles.css"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thetechjd/react-crypto-pay.git"
  },
  "keywords": [
    "react",
    "crypto",
    "evm",
    "wallet"
  ],
  "type": "module",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint . --ext js,jsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "test": "vitest run",
    "watch": "vitest"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^14.2.1",
    "@types/react": "^18.2.56",
    "@types/react-dom": "^18.2.19",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "c8": "^10.1.3",
    "eslint": "^8.56.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "jsdom": "^24.0.0",
    "vite": "^5.1.4",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "styled-components": "^6.1.19"
  }
}
